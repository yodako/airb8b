%body
.top
  .top-image
    %img{_pageexpand_: "416", alt: "ユニークな宿泊先や体験を予約しよう。", src: "/assets/top-img.jpeg"}/
  .header
    .header__logo
  .top-link
    %p
      登録300件超
      %br>/
      オレゴンのおもしろい家
  =form_tag(serch_rooms_path) do
    .top-message
      %h2 ユニークな宿泊先や体験を予約しよう。
    .top-form
      %h2 ユニークな宿泊先や体験を予約しよう。
      .top-form__place
        %span 場所
        %input{ name: "city", placeholder: "どこでも", type: "text", value: ""}/
      .top-form__box
        .top-form__box--check
          %span チェックイン
          %input{ name: "checkin", placeholder: "yyyy/mm/dd", type: "text", value: ""}/
        .top-form__box--check
          %span チェックアウト
          %input{ name: "checkout", placeholder: "yyyy/mm/dd", type: "text", value: ""}/
      .top-form__persons
        %span 人数
        .top-form__persons--button
        %button{type: "button"}
          %span ゲスト1人
      .top-form__button
        = button_tag '探す'
.contents
  .contents-category.clearfix
    .contents-category__title
      - if user_signed_in?
        %h2 何をお探しですか？ #{current_user.first_name}さん
      - else
        %h2 Airbnbで探す
    .contents-category__frame
      .contents-category__frame--box
        %a{_pageexpand_: "4112", href: "#"}
          .cate-image
            %img{_pageexpand_: "416", alt: "", src: "https://a0.muscache.com/im/pictures/8b7519ec-2c82-4c09-8233-fd4d2715bbf9.jpg"}/
          .cate-txt
            %span 宿泊先
      .contents-category__frame--box
        %a{_pageexpand_: "4116", href: "#"}
          .cate-image
            %img{_pageexpand_: "416", alt: "", src: "https://a0.muscache.com/im/pictures/cb8b3101-d419-4c17-8e2f-4989b39b98c3.jpg"}/
          .cate-txt
            %span 体験
      .contents-category__frame--box
        %a{_pageexpand_: "4120", href: "#"}
          .cate-image
            %img{_pageexpand_: "416", alt: "", src: "https://a0.muscache.com/im/pictures/da2d8e97-90b7-409f-94ac-5ab0327c289b.jpg"}/
          .cate-txt
            %span レストラン


  .contents-world.clearfix
    = render "world"
  .contents-world.clearfix
    = render "ny"



  .footer-link
    .footer-link__box
      %button#footer-button{type: "button"}
        %span#footer-link_text1 条件、プライバシー、通貨など

.footer
  .footer__main
    %img{alt: "", src: "/assets/footer.png"}/

