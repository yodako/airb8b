%navbar
  .navbar-header
    %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "/"} Airb8b
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %form.navbar-form.navbar-left
      .form-group
        %input.form-control{placeholder: "Search", type: "text"}/
      %button.btn.btn-default{type: "submit"} Submit
    %ul.nav.navbar-nav.navbar-right
      - if (!user_signed_in?)
        %li= link_to 'ホストを始める'
        %li= link_to '登録', new_user_registration_path
        %li= link_to 'ログイン', new_user_session_path
      - else
        %li= link_to 'ホストを始める', new_introduction_rooms_path
        %li= link_to '旅行'
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "/", role: "button"}
            = current_user.email
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Manage Listings'
            %li= link_to 'List Your Space'
            %li= link_to 'Your Reservations'
            %li.divider{role: "separator"}
            %li= link_to 'プロフィール編集', edit_user_registration_path
            %li= link_to 'ログアウト', destroy_user_session_path, method: :delete
